<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/shape_kripto_list_item_layout"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/crypto_image_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/image_background_layout" />


    <TextView
        android:id="@+id/crypto_currency_text"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        tools:text="Bitcoin"
        android:textSize="16sp"/>

    <TextView

        android:id="@+id/crypto_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="12dp"
        tools:text="1200000000004 $"/>


</LinearLayout>
