<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/screen"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/person_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İSMAİL GEMALMAZ"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginStart="70dp"
            android:layout_marginTop="-40dp"/>
        <View
            android:layout_width="310dp"
            android:layout_marginStart="70dp"
            android:layout_height="0.5dp"
            android:background="@color/black"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/crypto_account"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/accounts_layout"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Kripto Para Hesabım"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/foregin_currency_account"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/accounts_layout"
        android:layout_marginStart="230dp"
        android:text="Döviz      Hesabım"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        />








</RelativeLayout>